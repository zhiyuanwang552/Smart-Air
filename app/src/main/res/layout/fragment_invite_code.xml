<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/provider_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_link"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/manage_permissions_button"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/white"
        android:text="@string/copy"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="4dp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="67dp" />

    <Button
        android:id="@+id/manage_permissions_button2"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/white"
        android:text="@string/revoke"
        android:textColor="@color/black"
        app:cornerRadius="4dp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/optional_notes_text"
        android:layout_width="101dp"
        android:layout_height="24dp"
        android:text="Time left"
        android:textAlignment="textEnd"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="31dp" />

</androidx.constraintlayout.widget.ConstraintLayout>